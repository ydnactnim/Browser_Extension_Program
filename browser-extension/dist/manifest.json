{
  "manifest_version": 3,
  "name": "Weather Forecast with Open-Meteo",
  "version": "1.0.0",
  "description": "Displays current location and weekly weather forecast",
  "permissions": ["geolocation", "storage"],
  "host_permissions": ["https://api.open-meteo.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
