{
  "manifest_version": 3,
  "name": "Weather Forecast with Open-Meteo",
  "version": "1.0",
  "description": "Nominatim API, Open-Meteo API를 이용하여 오늘/일주일 날씨 정보를 표시",
  "permissions": ["geolocation", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-sm.svg",
      "48": "images/icon-2xl.svg"
    }
  },
  "icons": {
    "16": "images/icon-sm.svg",
    "48": "images/icon-2xl.svg"
  },
  "host_permissions": [
    "https://api.open-meteo.com/*",
    "https://nominatim.openstreetmap.org/*"
  ]
}
